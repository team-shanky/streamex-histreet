<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.histree"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.histree.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.histree.SearchActivity"
            android:label="@string/title_activity_search" >
        </activity>
        <activity
            android:name="com.example.histree.DrawActivity"
            android:label="@string/title_activity_draw" >
        </activity>
        <activity
            android:name="com.example.histree.AnviewActivity"
            android:label="@string/title_activity_anview" >
        </activity>
        <activity
            android:name="com.example.histree.ShareActivity"
            android:label="@string/title_activity_share" >
        </activity>
        <activity
            android:name="com.example.histree.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.example.histree.GPSActivity"
            android:label="@string/title_activity_gps" >
        </activity>
        <activity
            android:name="com.example.histree.LocateActivity"
            android:label="@string/title_activity_locate" >
        </activity>
    </application>

</manifest>